  = link_to '一覧', employee_articles_path(@employee), class: 'btn btn-primary'
table.table.table-hover
  tbody
    tr
      th
        = Article.human_attribute_name(:id)
      td
        = @article.id
    tr
      th
        = Article.human_attribute_name(:title)
      td
        = @article.title
    tr
      th
        = Article.human_attribute_name(:content)
      td
        = @article.created_at
    tr
      th
        = Article.human_attribute_name(:created_at)
      td
        = @article.created_at
    tr
      th
        = Article.human_attribute_name(:updated_at)
      td
        = @article.updated_at
