<h1>記事一覧ページ</h1>
<% if current_user.employee_info_manage_auth %>
	<div class="nav justify-content-end">
		<%= link_to '新規投稿', new_employee_article_path, class: 'btn btn-primary' %>
	</div>
<% end %>
<table class="table table-hover">
	<thead class="thead-default">
		<tr>
			<th><%= Article.human_attribute_name(:title) %></th>
			<th><%= Article.human_attribute_name(:created_at)%></th>
			<th></th>
		</tr>
	</thead>
	<tbody class="align-middle">
		<% @articles.each do |article| %>
			<tr>
				<td ><%= link_to article.title, article %></td>
				<td ><%= article.created_at %></td>
				<td>
					<%= link_to '編集', edit_article_path(article), class:'btn btn-primary' %>
					<%= link_to '削除', article, method: :delete, data:{confirm:"投稿を削除してもよろしいですか"},class:'btn btn-danger' %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>
